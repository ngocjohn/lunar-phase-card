{
  "name": "lunar-phase-card",
  "version": "1.13.0",
  "description": "Lovelace custom card for tracking Moon phases",
  "keywords": [
    "home-assistant",
    "homeassistant",
    "hass",
    "automation",
    "lovelace",
    "custom-cards"
  ],
  "author": "Viet Ngoc",
  "repository": {
    "type": "git",
    "url": "https://github.com/ngocjohn/lunar-phase-card",
    "repo": "ngocjohn/lunar-phase-card"
  },
  "module": "dist/lunar-phase-card.js",
  "license": "MIT",
  "dependencies": {
    "@dotenvx/dotenvx": "^1.32.0",
    "@mdi/js": "^7.4.47",
    "@noim/suncalc3": "^2.0.5",
    "@tsparticles/preset-stars": "^3.2.0",
    "@vibrant/color": "^3.2.1-alpha.1",
    "chart.js": "^4.4.7",
    "consola": "^3.4.2",
    "custom-card-helpers": "^1.9.0",
    "dotenv": "^16.4.7",
    "home-assistant-js-websocket": "^9.5.0",
    "home-assistant-styles-manager": "^3.1.0",
    "intl-messageformat": "^10.7.18",
    "lit": "^3.3.1",
    "luxon": "^3.5.0",
    "node-vibrant": "^3.2.1-alpha.1",
    "nvn-tabs": "^1.0.1",
    "shadow-dom-selector": "^5.0.1",
    "swiper": "^11.2.0",
    "tinycolor2": "^1.6.0"
  },
  "devDependencies": {
    "@babel/core": "^7.28.4",
    "@babel/preset-env": "^7.28.3",
    "@rollup/plugin-babel": "^6.0.4",
    "@rollup/plugin-commonjs": "^28.0.6",
    "@rollup/plugin-image": "^3.0.3",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-replace": "^6.0.2",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.1.4",
    "@types/luxon": "^3.7.1",
    "@types/node": "^22.10.4",
    "@typescript-eslint/eslint-plugin": "^8.43.0",
    "@typescript-eslint/parser": "^8.43.0",
    "@watchable/unpromise": "^1.0.2",
    "axios": "^1.7.9",
    "cross-env": "^10.1.0",
    "es-toolkit": "^1.40.0",
    "eslint": "^9.35.0",
    "eslint-plugin-perfectionist": "^4.15.0",
    "eslint-plugin-unused-imports": "^4.2.0",
    "husky": "^9.1.7",
    "js-yaml": "^4.1.0",
    "json5": "^2.2.3",
    "lint-staged": "^15.3.0",
    "postcss-preset-env": "^10.3.1",
    "prettier": "^3.6.2",
    "rollup": "^4.50.1",
    "rollup-plugin-filesize": "^10.0.0",
    "rollup-plugin-postcss": "^4.0.2",
    "rollup-plugin-postcss-lit": "^2.2.0",
    "rollup-plugin-serve": "^1.1.1",
    "tslib": "^2.8.1",
    "typescript": "^5.9.3"
  },
  "scripts": {
    "prepare": "husky install",
    "start:dev": "rollup -c rollup.config.dev.js --bundleConfigAsCjs -w",
    "dev": "rollup -c rollup.config.js --bundleConfigAsCjs -w",
    "rollup": "rollup -c rollup.config.js --bundleConfigAsCjs",
    "build": "npm run lint && npm run rollup",
    "lint": "eslint ./src",
    "lint:fix": "eslint ./src --fix",
    "update-lang": "node scripts/update-languages",
    "import-lang": "node scripts/generate-lang-imports.js",
    "add-missing-translations": "node scripts/add-missing-translations.js",
    "translate-new-strings": "npx dotenvx run -- node scripts/translate-new-strings.mjs",
    "update-missing": "npm run translate-new-strings && npm run add-missing-translations",
    "clean:build": "rm -rf dist build && mkdir -p dist build",
    "clean:cache": "rm -rf node_modules/.cache/rollup-plugin-typescript2/* && rm -rf node_modules/.cache/rollup-plugin-typescript2/rpt2_* ",
    "post-release": "node scripts/update-bug-template.js && node scripts/update-readme.js"
  }
}
